<div class='d-flex justify-content-between align-items-center'>
<h1><%= @task.title %></h1>
<%= link_to 'Edit this task', edit_task_path %>
</div>
<div class="border-bottom pb-3">
  <div class="details">
    <%= @task.details %>
  </div>
  <div>
    <%= @task.completed == true ? (fa_icon "check-square") + ' Task completed!' : (fa_icon "square") + ' Task incomplete :('%>
  </div>
</div>
<%= link_to 'Back to list', tasks_path, class: 'mt-3' %>
