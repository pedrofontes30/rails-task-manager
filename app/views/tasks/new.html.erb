<h1>New task</h1>
<div class="border-bottom pb-3">
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.submit %>
  <% end %>
</div>
<%= link_to 'Back to list', tasks_path %>
